<div class="row">
  <div class="col-3"></div>
  <div class="col-6">
    <h1>Agregar producto</h1>
    <div class="card" style="">
      <div class="card-body">
        <%= form_for @product do |j| %>
          <div class="form-group">
            <%= j.label :name%>
            <%= j.text_field :name, {:class => "form-control", :required => true}%>
          </div>
          <div class="form-group">
            <%= j.label :description%>
            <%= j.text_area :description, {:class => "form-control", :required => true}%>
          </div>
          <div class="form-group">
            <%= j.label :price %>
            <%= j.number_field :price, {:class => "form-control", :required => true, :pattern => '[0-9]{1,5}'}%>
          </div>
          <div class="form-group">
            <%= j.label :activo %>
            <%= j.text_area  :activo, {:class => "form-control", :required => true} %>
          </div>
          <div class="form-group">
            <input type="submit" value="Guardar" class="btn btn-success">
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>